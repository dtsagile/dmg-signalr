@model DamageAssessment.Models.User

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>User</legend>

    <div class="display-label">Email</div>
    <div class="display-field">@Model.Email</div>

    <div class="display-label">Locations</div>
    <div class="display-field">@(Model.Locations == null ? "None" : Model.Locations.Count.ToString())</div>

    <div class="display-label">DamageLocations</div>
    <div class="display-field">@(Model.DamageLocations == null ? "None" : Model.DamageLocations.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


